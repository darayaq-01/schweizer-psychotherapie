<section class='my-8'>
    <form
        name='kontakt'
        method='POST'
        data-netlify='true'
        class='flex flex-col gap-4 prose'
    >
        <input
            type='text'
            name='name'
            class='shadow shadow-gray-200 rounded bg-white text-es-gray py-2 px-4'
            placeholder='*Vorname Nachname'
            maxlength='30'
            minlength='3'
            required
        />

        <input
            type='email'
            name='email'
            class='shadow shadow-gray-200 rounded bg-white text-es-gray py-2 px-4'
            placeholder='*E-Mail-Adresse'
            maxlength='30'
            minlength='6'
            required
        />

        <textarea
            name='message'
            class='shadow shadow-gray-200 rounded bg-white text-es-gray py-2 px-4'
            placeholder='*Nachricht'
            maxlength='500'
            minlength='50'
            required
        >
        </textarea>

        <label for='datenschutz' class='flex gap-2 self-baseline'>
            <input
                type='checkbox'
                name='datenschutz'
                required
                class=''
                required
            />
            Ich habe die Datenschutzerkl√§rung gelesen und akzeptiere sie.
        </label>

        <div data-netlify-recaptcha='true'></div>

        <button
            type='submit'
            class='uppercase bg-es-logo-primary/80 hover:bg-es-logo-primary rounded text-white cursor-pointer px-4 py-2 max-w-fit'
            >Absenden</button
        >
    </form>
</section>
